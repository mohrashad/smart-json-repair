  "repository": {
    "type": "git",
    "url": "https://github.com/morashad/smart-json-repair.git"
  },
  "bugs": {
    "url": "https://github.com/mohrashad/smart-json-repair/issues"
  },
  "homepage": "https://github.com/mohrashad/smart-json-repair#readme",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.14.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=14"
  }
