{
  "name": "json-smart-repair",
  "version": "1.0.3",
  "description": "A smart tool to repair malformed JSON strings, making them valid and parseable.",
  "main": "./build/repair-engine.js",
  "types": "./build/repair-engine.d.ts",
  "bin": {
    "json-smart-repair": "build/cli.js"
  },
  "files": [
    "build/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node build/cli.js",
    "dev": "ts-node src/cli.ts"
